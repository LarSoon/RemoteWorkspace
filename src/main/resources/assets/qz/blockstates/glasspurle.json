{
  "multipart": [
    {
      "apply": {
        "model": "qz:block/glasspurle_post"
      }
    },
    {
      "when": {
        "north": true
      },
      "apply": {
        "model": "qz:block/glasspurle_side"
      }
    },
    {
      "when": {
        "east": true
      },
      "apply": {
        "model": "qz:block/glasspurle_side",
        "y": 90
      }
    },
    {
      "when": {
        "south": true
      },
      "apply": {
        "model": "qz:block/glasspurle_side_alt"
      }
    },
    {
      "when": {
        "west": true
      },
      "apply": {
        "model": "qz:block/glasspurle_side_alt",
        "y": 90
      }
    },
    {
      "when": {
        "north": false
      },
      "apply": {
        "model": "qz:block/glasspurle_noside"
      }
    },
    {
      "when": {
        "east": false
      },
      "apply": {
        "model": "qz:block/glasspurle_noside_alt"
      }
    },
    {
      "when": {
        "south": false
      },
      "apply": {
        "model": "qz:block/glasspurle_noside_alt",
        "y": 90
      }
    },
    {
      "when": {
        "west": false
      },
      "apply": {
        "model": "qz:block/glasspurle_noside",
        "y": 270
      }
    }
  ]
}